/* pages/title/my/addres/addres.wxss */
.container,.box{
  width: 100%;
  height: 100%;
  padding: 0;
}
.box{
  border-top: 20rpx solid #eee;
}
.footer{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}

.v1{
  width: 100%;
  height: 150rpx;
  display: flex;
  border-bottom: 1rpx solid #eee;
  padding: 10rpx 0;
}
.v1_v1{
  width: 85%;
  height: 100%;
}
.v1_v1>view{
  width: 100%;
  height: 50%;
  display: flex;
  align-items: center;
  text-indent: 20rpx;
}
.v1_v1>view:nth-of-type(2){
  color: #ccc;
}
.v1_v1>view>text{
  display: flex;
  align-items: center;
  justify-content: left;
  height: 50rpx;
  font-size: 28rpx;
  
}
.v1_v1>view>text:nth-of-type(2){
  font-size: 31rpx;
  padding-top: 7rpx;
}
.v1_v2{
  width:15%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ccc;
}
